<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/box_round_10_white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="품절처리가 완료 되었습니다"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/main_black"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="해당 상품의 노출상태도 변경할까요?"
        android:textSize="17dp"
        android:textColor="#8c93a8"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <TextView
        android:id="@+id/tv_show_on"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="노출 유지"
        android:textSize="18dp"
        android:textColor="#8c93a8"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#f7f8fe"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_show_off"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="2"/>

    <TextView
        android:id="@+id/tv_show_off"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="노출 끄기"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/main_blue"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_show_on"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="3"/>

</androidx.constraintlayout.widget.ConstraintLayout>