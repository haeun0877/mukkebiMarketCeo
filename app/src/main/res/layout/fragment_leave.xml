<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:padding="20dp"
    tools:context=".main.FindIdFragment">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back_icon"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원탈퇴"
        android:textColor="@color/main_black"
        android:textStyle="bold"
        android:textSize="32dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사장님의 비밀번호를 확인해 주세요"
        android:textColor="#8c93a8"
        android:textSize="18dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_white_gray"
        android:hint="아이디를 입력해 주세요"
        android:textColor="@color/main_black"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColorHint="#e4e6f0"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_white_gray"
        android:hint="비밀번호를 입력해 주세요"
        android:textColor="@color/main_black"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColorHint="#e4e6f0"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/et_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_check_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        android:textSize="18dp"
        android:background="@drawable/box_round_10_8c93a8"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/et_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_input_leave"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_check_pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_reason_leave"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/box_white_gray"
            android:textColor="@color/main_black"
            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:gravity="left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_txt"/>

        <TextView
            android:id="@+id/tv_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="하단 버튼을 누르면"
            android:textSize="18dp"
            android:textColor="#81879b"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/et_reason_leave"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_ceo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/main_blue"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_txt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 사장님의 탈퇴처리가 진행됩니다."
            android:textSize="18dp"
            android:textColor="#81879b"
            app:layout_constraintStart_toEndOf="@+id/tv_ceo_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_txt"/>

        <TextView
            android:id="@+id/tv_leave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_round_10_0537c8"
            android:text="회원 탈퇴 하기"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="16dp"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_ceo_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>