<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/box_round_10_white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜 선택"
        android:textStyle="bold"
        android:textColor="@color/main_black"
        android:textSize="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조회하고 싶은 기간을 선택해 주세요"
        android:textSize="18dp"
        android:textColor="#8c93a8"
        android:layout_marginTop="3dp"
        android:paddingBottom="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_icon"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <!--TAB-->
    <TextView
        android:id="@+id/tab_week"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="일/주"
        android:textColor="@color/main_blue"
        android:textSize="14dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/box_c0caeb_gray"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_title"
        app:layout_constraintEnd_toStartOf="@+id/tab_month"/>

    <TextView
        android:id="@+id/tab_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="월"
        android:textColor="#8c93a8"
        android:textSize="14dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/box_white_gray"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tab_week"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_title"
        app:layout_constraintEnd_toStartOf="@+id/tab_branching"/>

    <TextView
        android:id="@+id/tab_branching"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="분기"
        android:textColor="#8c93a8"
        android:textSize="14dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/box_white_gray"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tab_month"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_title"
        app:layout_constraintEnd_toStartOf="@+id/tab_date"/>

    <TextView
        android:id="@+id/tab_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:textColor="#8c93a8"
        android:textSize="14dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/box_white_gray"
        android:gravity="center"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toEndOf="@+id/tab_branching"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tab_week"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_ok">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_date_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box_round_5_white_gray"
                    android:textSize="18dp"
                    android:hint="적용 시작일"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:layout_marginRight="6dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12dp"
                    android:autoSizeStepGranularity="1dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_end_date"/>

                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box_round_5_white_gray"
                    android:textSize="18dp"
                    android:hint="적용 종료일"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12dp"
                    android:autoSizeStepGranularity="1dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_start_date"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Spinner
                android:id="@+id/spinner_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_radio_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기간 설정"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="24dp"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/box_round_10_d8d8d8"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nestedScroll"/>

</androidx.constraintlayout.widget.ConstraintLayout>